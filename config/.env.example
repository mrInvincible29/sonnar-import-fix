# Sonarr Import Monitor - Environment Variables
# Copy this file to .env and update with your actual values

# Required Settings
# ================

# Sonarr server URL (required)
SONARR_URL=http://your-sonarr-server:8989

# Sonarr API key (required)
# Get this from Sonarr Settings > General > Security > API Key
SONARR_API_KEY=your-32-character-api-key-here

# Webhook Security (strongly recommended)
# ======================================

# Webhook authentication secret
# Generate with: openssl rand -hex 32
# or: python -c "import secrets; print(secrets.token_hex(32))"
WEBHOOK_SECRET=generate-a-secure-random-32-character-secret

# Webhook server port (default: 8090)
WEBHOOK_PORT=8090

# Optional Settings
# ================

# Enable/disable webhook server (default: true)
WEBHOOK_ENABLED=true

# Webhook server host (default: 0.0.0.0)
WEBHOOK_HOST=0.0.0.0

# How long to wait before checking if grab imported (default: 600 seconds)
WEBHOOK_IMPORT_CHECK_DELAY=600

# Monitoring interval in seconds (default: 60)
MONITORING_INTERVAL=60

# Score difference threshold for forcing imports (default: 10)
FORCE_IMPORT_THRESHOLD=10

# Remove failed downloads from public trackers (default: true)
REMOVE_PUBLIC_FAILURES=true

# Protect private tracker ratios (default: true)
PROTECT_PRIVATE_RATIO=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Logging format: text or json (default: text)
LOG_FORMAT=text

# Tracker Lists (comma-separated, overrides config file)
# =====================================================

# Private trackers (protect ratio)
# PRIVATE_TRACKERS=beyondhd,privatehd,passthepopcorn,broadcasthenet

# Public trackers (safe to remove)
# PUBLIC_TRACKERS=nyaa,animetosho,rarbg,1337x,thepiratebay

# Docker-specific Settings
# ========================
# These are useful when running in Docker containers

# Set to true to enable dry run mode (no actual changes)
# DRY_RUN=false

# Python unbuffered output (useful for Docker logs)
# PYTHONUNBUFFERED=1

# Production Settings
# ==================

# For production deployments, consider these additional settings:

# Enable JSON logging for structured logs
# LOG_FORMAT=json

# Reduce logging verbosity
# LOG_LEVEL=WARNING

# Increase monitoring interval to reduce load
# MONITORING_INTERVAL=120